doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{teacher.name}
    style.
      body {
          font-family: Arial, sans-serif;
          text-align: center;
      }
      .container {
          margin: 0 auto;
          max-width: 600px;
          padding: 20px;
      }
      h1 {
          text-align: center;
      }
      p {
          text-align: left;
      }
      .review-box {
          border: 1px solid #ccc;
          border-radius: 5px;
          padding: 10px;
          margin-top: 20px;
          text-align: left;
      }
      .review-form textarea {
          width: 100%;
          height: 100px;
          resize: vertical;
          margin-bottom: 10px;
      }
  body
    .container
      h1 #{teacher.name}
      div
        p
          strong Name:
          |  #{teacher.name}
          br
          strong Designation:
          |  #{teacher.designation}
          br
          strong Department:
          |  Computer Science Department
        p
          strong Contact Details:
          br
          strong Email:
          |  #{teacher.email}
          br
          strong Phone Number:
          |  #{teacher.phone_number}
          br
          strong Address:
          |  #{teacher.address}
      div.review-box
        h2 Student Reviews
        div.reviews
          each review in teacher.reviews
            p= review
        a(href="/users/addreview") Add a Review
